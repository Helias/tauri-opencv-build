{
  "$schema": "https://schema.tauri.app/config/2.0.0",
  "productName": "SwishAI",
  "version": "1.0.0",
  "identifier": "com.swishai.app",
  "build": {
    "frontendDist": "../dist/browser",
    "devUrl": "http://localhost:4200",
    "beforeDevCommand": "npm run web:serve",
    "beforeBuildCommand": "npm run web:prod"
  },
  "app": {
    "withGlobalTauri": true,
    "windows": [
      {
        "title": "SwishAI",
        "width": 800,
        "height": 600,
        "resizable": true,
        "fullscreen": false,
        "devtools": true
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "../src/assets/logo-32x32.png",
      "../src/assets/logo-128x128.png",
      "../src/assets/logo.png",
      "../src/assets/logo.ico"
    ],
    "resources": ["../models/yolo11n-detect.onnx"],
    "externalBin": [],
    "copyright": "",
    "category": "DeveloperTool",
    "shortDescription": "",
    "longDescription": "",
    "macOS": {
      "frameworks": [],
      "minimumSystemVersion": "",
      "exceptionDomain": "",
      "signingIdentity": null,
      "providerShortName": null,
      "entitlements": null
    },
    "windows": {
      "certificateThumbprint": null,
      "digestAlgorithm": "sha256",
      "timestampUrl": "",
      "webviewInstallMode": {
        "type": "embedBootstrapper"
      },
      "allowDowngrades": false,
      "nsis": {
        "installerIcon": null,
        "installMode": "both"
      }
    }
  }
}
